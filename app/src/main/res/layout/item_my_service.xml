<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bg_service_item">

    <!-- Image du service -->
    <ImageView
        android:id="@+id/imageService"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        android:contentDescription="@string/service_image" />

    <!-- Texte du service -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COIFFURE"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupe de Cheveux"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupe de cheveux avec soins du cuir chevelu"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Icône pour éditer -->
    <ImageView
        android:id="@+id/btnEditService"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/edit_service"
        android:padding="6dp"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
