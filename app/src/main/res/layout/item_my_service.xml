<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Image du service -->
        <ImageView
            android:id="@+id/imageService"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_placeholder" />

        <!-- Titre -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageService"
            android:layout_marginLeft="12dp"
            android:text="Service title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- CatÃ©gorie -->
        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTitle"
            android:layout_toRightOf="@id/imageService"
            android:layout_marginLeft="12dp"
            android:text="Category"
            android:textSize="14sp"
            android:textColor="#888" />

        <!-- Description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCategory"
            android:layout_toRightOf="@id/imageService"
            android:layout_marginLeft="12dp"
            android:text="Service description..."
            android:textSize="14sp" />

        <!-- ðŸ”¥ ICÃ”NES MODIFIER + SUPPRIMER CÃ”TE Ã€ CÃ”TÃ‰ -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp">

            <!-- Bouton Modifier -->
            <ImageView
                android:id="@+id/btnEditService"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Edit"
                android:src="@drawable/ic_edit"
                android:padding="5dp"
                android:layout_marginEnd="10dp" />

            <!-- Bouton Supprimer -->
            <ImageView
                android:id="@+id/btnDeleteService"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:padding="5dp"
                android:contentDescription="Delete" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
