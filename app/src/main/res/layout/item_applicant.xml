<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/textApplicantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Prénom"
        android:textStyle="bold"/>

    <TextView android:id="@+id/textApplicantDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date/Heure"/>

    <TextView android:id="@+id/textApplicantLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localisation"/>

    <TextView android:id="@+id/textApplicantPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Téléphone"/>

    <TextView android:id="@+id/textApplicantEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"  android:weightSum="2"> <Button
        android:id="@+id/btnAccept"
        android:layout_width="0dp"   android:layout_height="wrap_content"
        android:text="Accepter"
        android:layout_weight="1"/> <Button
        android:id="@+id/btnReject"
        android:layout_width="0dp"   android:layout_height="wrap_content"
        android:text="Refuser"
        android:layout_weight="1"   android:layout_marginStart="8dp"/> </LinearLayout>
</LinearLayout>