<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:id="@+id/cardApplicant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- SECTION COMPACTE (TOUJOURS VISIBLE) -->
        <LinearLayout
            android:id="@+id/layoutCompact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <!-- Cercle avec Initiale -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#E1BEE7">

                <TextView
                    android:id="@+id/textApplicantInitial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N"
                    android:textSize="20sp"
                    android:textColor="#6A1B9A"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </FrameLayout>

            <!-- Nom complet -->
            <TextView
                android:id="@+id/textApplicantName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nom Prénom"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />

            <!-- Icône Flèche -->
            <ImageView
                android:id="@+id/imgExpandArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="#757575"
                android:rotation="0" />
        </LinearLayout>

        <!-- SECTION DÉTAILS (EXTENSIBLE) -->
        <LinearLayout
            android:id="@+id/layoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Statut Badge -->
            <TextView
                android:id="@+id/textApplicantStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En attente"
                android:textSize="12sp"
                android:textColor="#F57C00"
                android:textStyle="bold"
                android:background="@drawable/status_badge_pending"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="20dp" />

            <!-- Date et Heure -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar_18dp"
                     />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/textApplicantDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 Oct 2024, 10:00"
                        android:textSize="15sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date demandée"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>

            <!-- Localisation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location_18dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/textApplicantLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Rue Example"
                        android:textSize="15sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Localisation"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>

            <!-- Téléphone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_phone"
                     />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/textApplicantPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+212 600 000 000"
                        android:textSize="15sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Téléphone"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_email"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/textApplicantEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@example.com"
                        android:textSize="15sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>

            <!-- Boutons Actions -->
            <LinearLayout
                android:id="@+id/layoutButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnRejectApplicant"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="Refuser"
                    android:textColor="#D32F2F"
                    android:textStyle="bold"
                    android:backgroundTint="#FFEBEE"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnAcceptApplicant"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="Accepter"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="#673AB7"
                    android:layout_marginStart="8dp"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>