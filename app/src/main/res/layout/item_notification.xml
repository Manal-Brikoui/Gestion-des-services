<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- Icône de Notification - CORRIGÉ -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_email"
            app:tint="@android:color/holo_blue_dark"
            android:layout_gravity="center_vertical"
            android:contentDescription="Icône de notification"
            android:layout_marginEnd="12dp"/>

        <!-- Contenu Texte -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNotificationMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voir la demande de service de [Nom Prénom]"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textServiceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pour votre service : Coupe de Cheveux"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Date à Droite -->
        <TextView
            android:id="@+id/textNotificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="25/11/2025"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>