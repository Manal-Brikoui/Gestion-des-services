<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- Indicateur de notification non lue (optionnel) -->
        <View
            android:id="@+id/indicatorUnread"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_red"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>

        <!-- Icône de notification réduite -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notif"
            app:tint="@color/black"
            android:layout_gravity="center_vertical"
            android:contentDescription="Icône de notification"
            android:layout_marginEnd="10dp"/> <!-- Espacement ajusté -->

        <!-- Contenu de la notification -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Message de la notification -->
            <TextView
                android:id="@+id/textNotificationMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voir la demande de service de [Nom Prénom]"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <!-- Titre du service -->
            <TextView
                android:id="@+id/textServiceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pour votre service : Coupe de Cheveux"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Date de la notification -->
        <TextView
            android:id="@+id/textNotificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="25/11/2025"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
