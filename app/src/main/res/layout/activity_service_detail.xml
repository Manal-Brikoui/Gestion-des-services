<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageServiceDetail"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:background="#EDEDED"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="Image du service" />

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:background="@drawable/circle_white_translucent"
            android:src="@drawable/ic_arrow_back"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Retour" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageServiceDetail"
            android:layout_marginTop="-40dp"
            android:background="@drawable/rounded_top_background"
            android:padding="20dp">

            <TextView
                android:id="@+id/textCategoryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catégorie"
                android:textColor="#9E9E9E"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textTitleDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre du service très intéressant et captivant"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description du service"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description complète du service... Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                android:textSize="16sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informations clés"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_detail_box"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/textPriceDetail"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp"
                    android:drawablePadding="8dp" android:text="Tarif : 0,00 €"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_price_tag_18dp" /> <TextView
                android:id="@+id/textLocationDetail"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp"
                android:drawablePadding="8dp"
                android:text="Localisation : Ville, Pays"
                android:textColor="#424242"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_location_18dp" /> <TextView
                android:id="@+id/textPostedBy"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:drawablePadding="8dp"
                android:text="Posté par : Nom Prénom"
                android:textColor="#424242"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_profile_18dp" /> </LinearLayout>

            <Button
                android:id="@+id/buttonApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postuler"
                android:backgroundTint="#00796B"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="4dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>