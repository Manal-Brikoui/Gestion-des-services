<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/buttonBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:layout_margin="12dp"
            android:padding="6dp"
            android:background="@drawable/circle_white"
            android:elevation="6dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonBack"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageServiceDetail"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:background="#EDEDED"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textCategoryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catégorie"
                android:textStyle="bold"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/textTitleDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre du service"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Détails du service"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description complète du service..."
                android:textSize="15sp"
                android:textColor="#444444"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/textPriceDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarif : 0,00 €"
                android:textSize="15sp"
                android:textColor="#222222"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textLocationDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localisation : Indéfinie"
                android:textSize="15sp"
                android:textColor="#222222"
                android:layout_marginBottom="20dp" />

            <!-- Ajout du TextView pour le nom du posteur -->
            <TextView
                android:id="@+id/textPostedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posté par : Nom Prénom"
                android:textSize="15sp"
                android:textColor="#222222"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/buttonApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postuler"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:padding="14dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="4dp"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
